<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/liner_dialog"
        android:orientation="vertical">
    <EditText
        android:id="@+id/edit_sarlavha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="@string/sarlavha"
        android:maxLength="30"
        android:textSize="20sp" />

     <EditText
        android:id="@+id/edit_sana"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="sana"
         android:visibility="gone"
        android:inputType="date"
        android:textSize="20sp" />


    <CheckBox
        android:id="@+id/check_bajarildi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="bajarildi"
        android:visibility="gone"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/edit_batafsil"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="batafsil"
        android:textSize="20sp" />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        app:cardElevation="5dp"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_select_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="10dp"
            android:paddingStart="10dp"
            android:text="2001.01.01"
            android:textAllCaps="false"
            android:textStyle="normal"
            android:backgroundTint="#C9C9CA"
            android:textSize="16sp" />
    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_zarurlik"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:entries="@array/status"
        android:layout_height="wrap_content" />


    <Button
        android:id="@+id/btn_save"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:text="Save"
        android:textSize="20sp" />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progress_bar"
        android:layout_gravity="center"
        android:visibility="gone"/>

</FrameLayout>